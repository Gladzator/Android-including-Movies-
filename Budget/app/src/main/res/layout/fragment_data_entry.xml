<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context="android.example.com.budget.DataEntryFragment">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp"
    android:layout_marginBottom="15dp">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:id="@+id/homelinear">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="5dp">

           <TextView
               android:id="@+id/home"
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_height="wrap_content"
               android:text="Home/Rent"
               android:textSize="20sp"/>
           <EditText
               android:id="@+id/costofhome"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:maxLines="1"
               android:text="0"
               android:inputType="number"
               android:imeOptions="actionNext"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="5dp"
           android:id="@+id/livinglinear">

           <TextView
               android:id="@+id/dailyLiving"
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_height="wrap_content"
               android:text="Daily Living"
               android:textSize="20sp"/>
           <EditText
               android:id="@+id/costofliving"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:lines="1"
               android:text="0"
               android:inputType="number"
               android:imeOptions="actionNext"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="5dp"
           android:id="@+id/Transportationlinear">

           <TextView
               android:id="@+id/Transportation"
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_height="wrap_content"
               android:text="Transportation"
               android:textSize="20sp"/>
           <EditText
               android:id="@+id/costoftransportation"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:lines="1"
               android:text="0"
               android:inputType="number"
               android:imeOptions="actionNext"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="5dp"
           android:id="@+id/Entertainmentlinear">

           <TextView
               android:id="@+id/Entertainment"
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_height="wrap_content"
               android:text="Entertainment"
               android:textSize="20sp"/>
           <EditText
               android:id="@+id/costofentertainment"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:lines="1"
               android:text="0"
               android:inputType="number"
               android:imeOptions="actionNext"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="5dp"
           android:id="@+id/Personallinear">

           <TextView
               android:id="@+id/Personal"
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_height="wrap_content"
               android:text="Personal"
               android:textSize="20sp"/>
           <EditText
               android:id="@+id/costofpersonal"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:lines="1"
               android:text="0"
               android:inputType="number"
               android:imeOptions="actionNext"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:padding="5dp"
           android:id="@+id/FinancialObligationslinear">

           <TextView
               android:id="@+id/FinancialObligations"
               android:layout_width="0dp"
               android:layout_weight="2"
               android:layout_height="wrap_content"
               android:text="Financial Obligations"
               android:textSize="20sp"/>
           <EditText
               android:id="@+id/costofobligations"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:lines="1"
               android:text="0"
               android:inputType="number"
               android:imeOptions="actionNext"/>
       </LinearLayout>
    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_gravity="end"
        android:background="@null"/>
   </LinearLayout>
   </ScrollView>
</android.support.v7.widget.CardView>
</FrameLayout>
